<div class="container">
  <p class="title is-2">Login!</p>
  <div class="columns">
    <div class="column is-4"><% flash.each do |message_type, message| %>
      <div class="notification is-danger"><%= message %>
      </div><% end %><%= form_for(:session, url: login_path) do |f| %>
      <p class="control"><%= f.label :name, :class => 'label' %><%= f.text_field :name, :class => 'input' %>
      </p>
      <p class="control"><%= f.label :password, :class => 'label' %><%= f.password_field :password, :class => 'input' %>
      </p>
      <p class="control"><%= f.submit 'Submit', :class => 'button is-primary is-pulled-right' %>
      </p><%= link_to 'Back', languages_path,  :class=>"button"  %><% end %>
    </div>
  </div>
</div>