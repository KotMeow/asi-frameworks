<div class="container">
   <p class="title is-2">Add new language!</p>
   <div class="columns">
       <div class="column is-4">
   
<%= form_for :language, url: languages_path do |f| %>
  <p class="control">
    <%= f.label :name, :class => 'label' %>
    <%= f.text_field :name, :class => 'input' %>
  </p>
  
  <p class="control">
    <%= f.label :description, :class => 'label' %>
    <%= f.text_area :description, :class => 'input' %>
  </p>

  <p class="control">
    <%= f.submit 'Submit', :class => 'button is-primary' %>
  </p>
<% end %>
       </div>
    </div>
</div>